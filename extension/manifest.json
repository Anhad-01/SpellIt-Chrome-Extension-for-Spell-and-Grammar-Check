{
    "manifest_version": 3,
    "name": "SpellIt - Offline Spell & Grammar Checker",
    "version": "1.1.0",
    "description": "Offline spell and grammar checker for Chrome.",
    "permissions": [
        "activeTab",
        "scripting",
        "storage"
    ],
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "assets/icon.png",
            "48": "assets/icon.png",
            "128": "assets/icon.png"
        }
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "lib/typo.js",
                "js/spellChecker.js",
                "js/rules.js",
                "js/tooltip.js",
                "js/languageToolService.js",
                "js/content.js"
            ],
            "css": [
                "css/styles.css"
            ],
            "run_at": "document_end"
        }
    ],
    "web_accessible_resources": [
        {
            "resources": [
                "assets/en_US.aff",
                "assets/en_US.dic",
                "assets/en_GB.aff",
                "assets/en_GB.dic"
            ],
            "matches": [
                "<all_urls>"
            ]
        }
    ]
}